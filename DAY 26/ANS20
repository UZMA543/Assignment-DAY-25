// Function to create a counter using closures
function createCounter() {
    let count = 0; // private variable, not accessible outside

    return {
        increment: function() {
            count++;
            console.log("Current count:", count);
        },
        decrement: function() {
            count--;
            console.log("Current count:", count);
        },
        getCount: function() {
            console.log("Current count:", count);
            return count;
        }
    };
}

// Example Usage:
const counter1 = createCounter();
counter1.increment(); // Current count: 1
counter1.increment(); // Current count: 2
counter1.decrement(); // Current count: 1

// Multiple counters
const counter2 = createCounter();
counter2.increment(); // Current count: 1 (independent from counter1)
